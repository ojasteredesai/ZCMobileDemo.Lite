<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZCMobileDemo.Lite.Views.Module.UDFDDMenu">
    <ListView HasUnevenRows="True" x:Name="lst" ItemTapped="lst_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid>
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Value}" IsVisible="False" />
                        <Label Text="{Binding ShareWithID}" IsVisible="False" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>